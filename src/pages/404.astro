---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Mason Hahn - Front-End Developer">
  <main>
    <div>
      <div class="user-card">
        <div>
          <h1>404</h1>
          <h2>oops. not here.</h2>
          <div class="links">
            <a href="/">Home</a>
            <a href="https://mastodon.social/@bricksroo">Mastodon</a>
            <a href="https://twitter.com/bricksroo">Twitter</a>
            <a href="https://github.com/bricksroo">Github</a>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1.5rem;
    max-width: 60ch;
    min-height: 100vh;
    display: grid;
    align-items: center;
  }
  h1 {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
  }
  h2 {
    color: #4a5568;
    font-size: 1.125rem;
    font-weight: 400;
    margin: 0;
  }
  .user-card {
    display: grid;
    gap: 1.75rem;
    grid-template-columns: auto 1fr;
    align-items: center;
  }
  .user-card .links {
    display: flex;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }
  a {
    color: #4c51bf;
    text-decoration: underline;
  }
</style>
